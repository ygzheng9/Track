<%- model_class = Drop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:today) %>:</strong></dt>
  <dd><%= @drop.today %></dd>
  <dt><strong><%= model_class.human_attribute_name(:getup_at) %>:</strong></dt>
  <dd><%= @drop.getup_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sleep_at) %>:</strong></dt>
  <dd><%= @drop.sleep_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:step) %>:</strong></dt>
  <dd><%= @drop.step %></dd>
  <dt><strong><%= model_class.human_attribute_name(:km) %>:</strong></dt>
  <dd><%= @drop.km %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kcal) %>:</strong></dt>
  <dd><%= @drop.kcal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pp) %>:</strong></dt>
  <dd><%= @drop.pp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:xx) %>:</strong></dt>
  <dd><%= @drop.xx %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @drop.comment %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              drops_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_drop_path(@drop), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              drop_path(@drop),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
