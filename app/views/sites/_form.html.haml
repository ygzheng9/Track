= simple_form_for @site, :html => { :class => 'form-horizontal' } do |f| 
  = f.association :city, include_blank: false
  = f.input :name, placeholder: "Which location"   
  .form-actions
    = f.button :submit, :class => 'btn-primary' 
    
    - if @city.nil?
      = link_to t('.cancel', :default => t("helpers.links.cancel")),
                  sites_path, :class => 'btn' 
    - else 
      = link_to t('.cancel', :default => t("helpers.links.cancel")),
                  city_sites_path(@city), :class => 'btn' 