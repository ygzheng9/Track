.page-header
  %h1 Client

%table{class: "table table-striped table-bordered"}
  %thead
    %tr
      %th Client
      %th Operations

  %tbody
    - @clients.each do |client|
      %tr
        %td
          = link_to client.name, edit_client_path(client)         
        %td
          = link_to 'Projects', client_projects_path(client), :class => 'btn btn-mini '          
          = link_to 'X', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger"    

%br

= link_to 'New Client', new_client_path, class: "btn btn-primary"
