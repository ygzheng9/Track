%h3
  = @drop.today unless @drop.nil?

= simple_form_for @segment, :html => { :class => 'form-horizontal' } do |f| 
  = f.input :start 
  = f.input :end 
  = f.input :step 
  = f.input :km 
  = f.input :kcal 
  = f.input :comment 
  .form-actions
    = f.button :submit, :class => 'btn-primary' 
    = link_to t('.cancel', :default => t("helpers.links.cancel")),
                segments_path, :class => 'btn' 