<%- model_class = Segment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:today) %>:</strong></dt>
  <dd><%= @segment.today %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_valid) %>:</strong></dt>
  <dd><%= @segment.is_valid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
  <dd><%= @segment.start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end) %>:</strong></dt>
  <dd><%= @segment.end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:step) %>:</strong></dt>
  <dd><%= @segment.step %></dd>
  <dt><strong><%= model_class.human_attribute_name(:km) %>:</strong></dt>
  <dd><%= @segment.km %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kcal) %>:</strong></dt>
  <dd><%= @segment.kcal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @segment.comment %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              segments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_segment_path(@segment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              segment_path(@segment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
