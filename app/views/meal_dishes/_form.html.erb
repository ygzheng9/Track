<%= simple_form_for @meal_dish, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :dish, label: "What", prompt: "what did you eat?"%>
  <%= f.input :amount, label: "How much", placeholder: "0" %>
  <%= f.input :quantity, label: "How many", placeholder: "1" %>
  <%= f.input :remark, hint: "Any thing special?" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meal_dishes_path, :class => 'btn' %>
  </div>
<% end %>
