<%- model_class = MealDish -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Dish</th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:remark) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meal_dishes.each do |meal_dish| %>
      <tr>
        <td><%= link_to meal_dish.dish.name, edit_meal_dish_path(meal_dish) %></td>
        <td><%= meal_dish.amount %></td>
        <td><%= meal_dish.quantity %></td>
        <td><%= meal_dish.remark %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      meal_dish_path(meal_dish),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meal_dish_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.back', :default => t("helpers.links.back")),
            meals_path,
            :class => 'btn' %>