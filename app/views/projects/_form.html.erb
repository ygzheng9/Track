<%= simple_form_for @project, :authenticity_token => true, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :client, prompt: "Which client" %>
  <%= f.input :name, placeholder: "Leave a name" %>
  <%= f.input :code, placeholder: "CATS Code" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
