<% unless @drop.nil? %>
  <%= @drop.today %>
<% end %>
    
<%= simple_form_for @meal, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :start %>
  <%= f.input :end %>
  <%= f.association :spot, label: "Where", prompt: "where did you eat?"%>
  <%= f.association :key_person, label: "Together with", prompt: "with whom?"%>
  <%= f.association :additional_person, label: "Any other", prompt: "with whom?"%>
  <%= f.input :amount, label: "How Much", placeholder: "0.0" %>
  <%= f.input :is_paid, label: "Paid", collection: [["No", 0], ["Yes", 1]], include_blank: false%>
  <%= f.input :remark, hint: "Any thing special." %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meals_path, :class => 'btn' %>
  </div>
<% end %>
